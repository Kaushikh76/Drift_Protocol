{
  "name": "cross-chain-payment-gateway-ts",
  "version": "1.0.0",
  "description": "TypeScript Cross-chain payment gateway for Chiliz fan tokens",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon src/server.ts",
    "events": "ts-node src/EventListenerService.ts",
    "events:watch": "nodemon src/EventListenerService.ts",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:chiliz": "npx hardhat run scripts/deploy.ts --network chilizspicy",
    "test": "npx hardhat test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "verify": "ts-node verification/NoSimulationCheck.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ethers": "^6.7.1",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/ws": "^8.5.5",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "rimraf": "^5.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.17.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "typechain": "^8.3.2"
  },
  "keywords": [
    "typescript",
    "blockchain",
    "cross-chain",
    "payment-gateway",
    "chiliz",
    "hyperlane",
    "uniswap",
    "fan-tokens",
    "alchemy"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}